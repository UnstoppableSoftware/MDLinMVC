@model IEnumerable<MDLinMVC.Models.RockBand>

@{
    ViewBag.Title = "Index";
}

<main class="mdl-layout__content">
<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="mdl-data-table mdl-js-data-table mdl-shadow--4dp">
	<thead>
		<tr>
			<th>
			    @Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
			    @Html.DisplayNameFor(model => model.OriginationDate)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
			    @Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
			    @Html.DisplayFor(modelItem => item.OriginationDate)
			</td>
			<td class="mdl-data-table__cell--non-numeric">
				<a href="@Url.Action("Edit", new { id = item.Id })">
                        <i class="material-icons md-light">mode_edit</i>
                </a>
				<a href="@Url.Action("Details", new { id = item.Id })">
                        <i class="material-icons md-light">note</i>
                </a>
				<a href="@Url.Action("Delete", new { id = item.Id })">
                        <i class="material-icons md-light">delete</i>
                </a>
			</td>
		</tr>
}
	</tbody>
</table>
</div>
</div>
</main>

